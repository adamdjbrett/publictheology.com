---
permalink: /sitemap.xml
sitemapExclude: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- for entry in collections.all %}
  {%- if entry.url and not entry.data.sitemapExclude and entry.url != '/404.html' -%}
  <url>
    <loc>{{ site.url }}{{ entry.url }}</loc>
    <changefreq>{{ entry.data.changefreq or 'weekly' }}</changefreq>
    <priority>{{ entry.data.priority or '0.5' }}</priority>
  </url>
  {%- endif -%}
{%- endfor %}
</urlset>
